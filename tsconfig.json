{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": false,
    "strict": false,
    "noImplicitAny": false,
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"]
    },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "skipLibCheck": true
  }, 
  "include": ["vite.config.*", "env.d.ts", "src/**/*", "src/**/*.vue", ".d.ts"]
}